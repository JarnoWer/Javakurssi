package Viikko2;

import java.util.Scanner;

public class RekisterinumeroTarkastin {
	public static void main(String[] args) {
		Scanner reader = new Scanner(System.in);
		while (true) {
			System.out.println("Syötä rekisterinumero (q-kirjain lopettaa): ");
			String regLic = reader.nextLine();

			if (regLic.matches("[qwertyuiopåäölkjhgfdsazxcvbnmQWERTYUIOPÅÄÖLKJHGFDSAZXCVBNM]{2,3}-[0-9]{1,3}")) {
				System.out.println("oikein");
			} else {
				System.out.println("väärin");
				break;
			}
		}
		reader.close();
	}
}
